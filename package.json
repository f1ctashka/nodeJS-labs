{
  "name": "nodejs-labs",
  "version": "1.0.0",
  "description": "Node.js Labs s. 5",
  "main": "dist/main.js",
  "type": "module",
  "scripts": {
    "start": "ts-node --experimental-specifier-resolution=node src/main.ts",
    "start:dev": "nodemon --experimental-specifier-resolution=node --watch \"src/**/*\" src/main.ts",
    "start:prod": "node --experimental-specifier-resolution=node dist/main.js",
    "build": "tsc",
    "format": "prettier --check \"src/**/*{.js,.ts}\" --ignore-path .gitignore",
    "format:fix": "prettier --write \"src/**/*{.js,.ts}\" --ignore-path .gitignore",
    "lint": "eslint --ignore-path .gitignore --cache \"src/**/*{.js,.ts}\"",
    "lint:fix": "eslint --ignore-path .gitignore --cache \"src/**/*{.js,.ts}\" --fix",
    "typecheck": "tsc --noEmit --project tsconfig.json",
    "prepare": "husky install",
    "prebuild": "rimraf dist",
    "test": "jest --passWithNoTests"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/f1ctashka/nodeJS-labs.git"
  },
  "keywords": [
    "Node.js",
    "KPI"
  ],
  "author": "Victoria Ilchenko IK-01, Vadym Stroy IK-02",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/f1ctashka/nodeJS-labs/issues"
  },
  "homepage": "https://github.com/f1ctashka/nodeJS-labs#readme",
  "private": true,
  "devDependencies": {
    "@types/jest": "^29.2.4",
    "@types/node": "^18.11.11",
    "@typescript-eslint/eslint-plugin": "^5.45.1",
    "@typescript-eslint/parser": "^5.45.1",
    "eslint": "^8.29.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-sonarjs": "^0.17.0",
    "husky": "^8.0.2",
    "jest": "^29.3.1",
    "nodemon": "^2.0.20",
    "prettier": "^2.8.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.3"
  },
  "dependencies": {
    "dotenv": "^16.0.3",
    "http-status": "^1.5.3",
    "reflect-metadata": "^0.1.13"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
